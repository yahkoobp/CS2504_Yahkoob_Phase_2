<Window x:Class="Example14Project.ImageBrushWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example14Project"
        mc:Ignorable="d"
        Title="ImageBrushWindow" Height="450" Width="800" Closing="Window_Closing">
    <Canvas Margin="0,0,10,0">
        <Rectangle Height="203" Canvas.Left="106" Stroke="Black" Canvas.Top="155" Width="285" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/pattern.jpg" Opacity="0.365"/>
            </Rectangle.Fill>
        </Rectangle>
        <Ellipse Height="204" Canvas.Left="467" Stroke="Black" Canvas.Top="155" Width="228" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/peacock.jpg" Opacity="0.595"/>
            </Ellipse.Fill>
        </Ellipse>
    </Canvas>
</Window>
