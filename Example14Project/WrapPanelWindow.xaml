<Window x:Class="Example14Project.WrapPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example14Project"
        mc:Ignorable="d"
        Title="Wrap Panel" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <WrapPanel Orientation="Horizontal"
            Canvas.Top="100" Canvas.Left="100"
            Width="400"
            Height="100">
            <Button Content="Button 1" Width="140"/>
            <Button Content="Button 2" Width="140"/>
            <Button Content="Button 3" Width="140"/>
            <Button Content="Button 3" Width="140"/>
        </WrapPanel>

        <WrapPanel Orientation="Vertical"
     Canvas.Top="50" Canvas.Left="550"
     Width="100"
     Height="400">
            <Button Content="Button 1" Height="140"/>
            <Button Content="Button 2" Height="140"/>
            <Button Content="Button 3" Height="140"/>
            <Button Content="Button 3" Height="140"/>
        </WrapPanel>
    </Canvas>
</Window>
